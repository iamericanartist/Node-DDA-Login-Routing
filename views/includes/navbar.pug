.navbar.navbar-default
  .container-fluid
    ul.nav.navbar-nav.navbar-right.plzLogin
      li
        a(href='/') Home
      if email
        li: a(href='#') Logged in as #{email}
        li(class={ active: page === 'Logout' })
          a(href='/logout') Logout
      else
        li: a(href='#') Not logged in
        li(class={ active: page === 'Login' })
          a(href='/login') Login
        li(class={ active: page === 'Register' })
          a(href='/register') Register

style.
  .plzLogin {
    font-size: .9rem;
  }


